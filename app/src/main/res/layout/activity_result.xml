<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.ui.result.ResultActivity">

    <LinearLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_result"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/dauntomat"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Hasil"
            android:layout_marginBottom="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_costum"
            android:layout_marginBottom="20dp"

            >


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nama_penyakit"
                android:text="Nama Penyakit : "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/penyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/nama_penyakit"
                android:layout_marginStart="10dp"
                android:text="@string/penyakit"
                android:textColor="@color/black"

                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/view_costum">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/penjelasan"
                android:text="Penjelasan         : "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/penjelasan_penyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/penjelasan"
                android:layout_marginStart="10dp"
                android:text="@string/penjelasan_penyakit"
                android:textColor="@color/black"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/view_costum">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/solusi"
                android:text="Solusi                 : "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                />

            <TextView
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/solusi_penyakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/solusi"
                android:layout_marginStart="10dp"
                android:text="@string/solusi_penyakit"
                android:textColor="@color/black"

                />

        </RelativeLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>