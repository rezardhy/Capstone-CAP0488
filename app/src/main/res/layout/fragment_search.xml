<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.searchpage.search.SearchFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:text="Pilih Jenis Tanaman"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tomat"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_marginVertical="20dp"
        android:background="@drawable/view_costum"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tomat"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tomat"

            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tester"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/view_costum"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mobile_tester"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="mobile Net"

            />

    </androidx.cardview.widget.CardView>



</LinearLayout>